<% layout("layouts/boilerplate") %>
<body>
  <div class="col-7 offset-2">
    <br />
    <br />

    <h1>Create New listing</h1>
    <form method="post" action="/listings/new" class="needs-validation">
      <div class="form-group">
        <label for="title">Title</label>
        <input
          name="listing[title]"
          class="form-control"
          placeholder="Add Title"
          id="title"
          required
        />
        <div class="invalid-feedback">Please keep Title.</div>
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <textarea
          class="form-control"
          name="listing[description]"
          placeholder="enter description"
          id="description"
          required
        ></textarea>
        <div class="invalid-feedback">Please keep a description.</div>
      </div>
      <div class="form-group">
        <label for="imgurl">Image URL</label>
        <input
          class="form-control"
          name="listing[image][url]"
          placeholder="enter image url"
          id="imgurl"
          required
        />
        <div class="invalid-feedback">Please take a image url.</div>
      </div>
      <div class="row">
        <div class="form-group col-4">
          <label for="price">Price</label>
          <input
            type="number"
            name="listing[price]"
            placeholder=" india"
            class="form-control"
            id="price"
            required
          />
          <div class="invalid-feedback">Please keep a price.</div>
        </div>
        <div class="form-group col-8">
          <label for="country">Enter country name</label>
          <input
            name="listing[country]"
            class="form-control"
            placeholder="enter location"
            id="country"
            required
          />
          <div class="invalid-feedback">Please type a country.</div>
        </div>
      </div>
      <div class="form-group">
        <label for="location">Enter location</label>
        <input
          class="form-control"
          name="listing[location]"
          placeholder="enter title"
          id="location"
          required
        />
        <div class="invalid-feedback">Please keep a location.</div>
      </div>
      <div class="row">
        <div class="form-group col-6">
          <label for="latitude">Latitude</label>
          <input
            type="number"
            name="listing[latitude]"
            placeholder="ex: 12.9716"
            class="form-control"
            id="latitude"
            step="any"
            required
          />
          <div class="invalid-feedback">Latitude is required.</div>
        </div>

        <div class="form-group col-6">
          <label for="longitude">Longitude</label>
          <input
            type="number"
            name="listing[longitude]"
            placeholder="ex: 77.5946"
            class="form-control"
            id="longitude"
            step="any"
            required
          />
          <div class="invalid-feedback">Longitude is required.</div>
        </div>
      </div>
      <br />

      <button
        class="btn btn-dark mb-2"
        style="background-color: red; border: none"
      >
        submit
      </button>
    </form>
  </div>
</body>
