<% layout("layouts/boilerplate") %>

<body>
  <h1>BOOKmyhotel</h1>
  <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1">
    <% if(recommendations==null){%>

    <h2>no recommendations found</h2>

    <% }%> <% for (let listing of recommendations) { %>
    <ul>
      <a href="/listings/<%= listing._id %>"
        ><div class="card col" style="width: 18rem">
          <img
            src="https://images.unsplash.com/photo-1525596662741-e94ff9f26de1?q=80&w=1587&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
            class="card-img-top"
            alt="<%= listing.title %> image not found"
          />
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %> </b><br />&#8377;<%=listing.price%>
            </p>
          </div>
        </div>
      </a>
    </ul>
    <% } %>
  </div>
</body>
