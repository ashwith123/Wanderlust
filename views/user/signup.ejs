<% layout("layouts/boilerplate") %>

<body>
  <div class="row mt-3">
    <h1 class="col-6 offset-3">Sign up on Wanderlust</h1>
    <div class="col-6 offset-3">
      <form action="/signup" method="post" novalidate>
        <div class="mb-3">
          <label for="title" class="form-label" class="needs-validation"
            >username</label
          >
          <input
            name="username"
            type="text"
            class="form-control"
            placeholder="Add Title"
            id="title"
            required
          />
          <div class="valid-feedback">title looks good</div>
        </div>
        <div class="mb-3">
          <label
            for="email"
            class="form-label"
            class="needs-validation"
            novalidate
            >Enter mail</label
          >
          <input
            name="email"
            type="text"
            class="form-control"
            placeholder="Add Title"
            id="email"
            required
          />
        </div>
        <div class="mb-3">
          <label
            for="password"
            class="form-label"
            class="needs-validation"
            novalidate
            >Password</label
          >
          <input
            name="password"
            type="password"
            class="form-control"
            placeholder="Add Title"
            id="password"
            required
          />
          <div class="valid-feedback">password is strong</div>
        </div>
        <button class="btn btn-success" type="submit">signup</button>
      </form>
      <br />
      <a href="/login">Already have an account ?</a>
    </div>
  </div>
</body>
